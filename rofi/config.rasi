configuration {
	modi: ["drun"];
    display-drun: "";
    drun-display-format: "{name}";
    show-icons: false;

 	kb-row-down: "Alt+j";
  	kb-row-up: "Alt+k";
  	kb-move-char-back: "Alt+h";
  	kb-move-char-forward: "Alt+l";

	cursor-theme: "macOS";
    cursor-size: 24;
}

* {
    highlight: none;
    font: "Mononoki Bold 20";
	background: #282828;
	foreground: #ebdbb2;
}

window {
    background-color: @background;
    border: 3px;
    width: 500px;
    height: 365px;
    padding: 0;
}

listview {
    border: 3px 0 0; 
    scrollbar: false;
}

element {
    padding: 5px 10px;
}

element.normal.normal {
    background-color: @background;
    text-color: @foreground;
}

element.selected.normal {
	background-color: #282828;
    text-color: #d79921;
}

element.alternate.normal {
    background-color: @background;
    text-color: @foreground;
}

element.alternate.active {
    background-color: @background;
    text-color: @foreground;
}

inputbar {
    text-color: @foreground;
    padding: 10 10;
    children: [ prompt, textbox-prompt-sep, entry, case-indicator ];
}

textbox-prompt-sep {
    expand: false;
}

entry {
    placeholder: "";
    blink: false;
}
