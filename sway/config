# startup
exec_always --no-startup-id wl-paste --type text --watch cliphist store
exec_always --no-startup-id wl-paste --type image --watch cliphist store

exec_always eww close-all
exec_always eww open bar

# variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l

# decoration
output * bg /home/kaj/dotfiles/wallpapers/dark.png fill
seat seat0 xcursor_theme macOS 32

default_border pixel 3
default_floating_border pixel 3

gaps inner 6

client.focused #EBDBB2 #282828 #FE8019 #EBDBB2 #EBDBB2
client.focused_inactive #3C3836 #282828 #EBDBB2 #3C3836 #3C3836
client.unfocused #3C3836 #282828 #EBDBB2 #3C3836 #3C3836
client.urgent #3C3836 #282828 #EBDBB2 #3C3836 #3C3836
client.placeholder #3C3836 #282828 #EBDBB2 #3C3836 #3C3836
client.background #282828

# input
input * {
	xkb_layout "be"
}

focus_follows_mouse no
bindsym $mod+t exec alacritty
bindsym $mod+q kill
bindsym $mod+Space exec rofi -show drun
floating_modifier $mod normal

bindsym $mod+Shift+c reload

bindsym $mod+$right focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$left focus right

bindsym $mod+Shift+$right move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$left move right

bindsym $mod+Ampersand workspace one
bindsym $mod+Eacute workspace two
bindsym $mod+Quotedbl workspace three
bindsym $mod+Apostrophe workspace four
bindsym $mod+Parenleft workspace five
bindsym $mod+Section workspace six
bindsym $mod+Egrave workspace seven
bindsym $mod+Exclam workspace eight
bindsym $mod+Ccedilla workspace nine
bindsym $mod+Agrave workspace ten

bindsym $mod+Shift+Ampersand move container to workspace one
bindsym $mod+Shift+Eacute move container to workspace two
bindsym $mod+Shift+Quotedbl move container to workspace three
bindsym $mod+Shift+Apostrophe move container to workspace four
bindsym $mod+Shift+Parenleft move container to workspace five
bindsym $mod+Shift+Section move container to workspace six
bindsym $mod+Shift+Egrave move container to workspace seven
bindsym $mod+Shift+Exclam move container to workspace eight
bindsym $mod+Shift+Ccedilla move container to workspace nine
bindsym $mod+Shift+Agrave move container to workspace ten

bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+f floating toggle

bindsym $mod+r mode "resize"

mode "resize" {
    bindsym $left resize grow width 50px
    bindsym $down resize grow height 50px
    bindsym $up resize shrink height 50px
    bindsym $right resize shrink width 50px
    bindsym Escape mode "default"
}

bindsym --locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -10%
bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +10%
bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 25%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 25%+
bindsym Print exec slurp | grim -g - - | wl-copy
